<Window x:Class="MassFileEditor.ExtensionPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Extensions" Height="300" Width="400">
    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        
        <Label Content="Extensions Available:" Grid.Column="0" Grid.Row="0" Margin="5"/>
        
        <!--<ListBox x:Name="extensionList" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Margin="2"/>-->
        
        <Button x:Name="acceptChange" Content="Ok"  Grid.Row="2" Margin="5" Width="75" Click="acceptChange_Click_1"/>

    </Grid>
</Window>
